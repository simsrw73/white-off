{
  "name": "white-off",
  "version": "1.0.0",
  "description": "Theme for Logos forums",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-task:scss-compile": "node-sass-chokidar --source-map true sass/ -o dist/",
    "build-task:autoprefixer": "postcss dist/*.css --use autoprefixer --replace",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar --verbose \"sass/**/*.scss\" -c \"npm run sass:build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simsrw73/white-off.git"
  },
  "author": "Randy W. Sims",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simsrw73/white-off/issues"
  },
  "homepage": "https://github.com/simsrw73/white-off#readme",
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0"
  }
}
