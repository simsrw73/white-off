{
  "name": "white-off",
  "version": "0.9.0",
  "description": "Theme for Logos forums",
  "author": "Randy W. Sims",
  "license": "MIT",
  "homepage": "https://github.com/simsrw73/white-off#readme",
  "bugs": {
    "url": "https://github.com/simsrw73/white-off/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simsrw73/white-off.git"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "not dead"
  ],
  "main": "",
  "scripts": {
    "build": "npm-run-all build:*",
      "build:scss": "node-sass-chokidar --source-map true sass/ -o dist/",
      "build:postcss": "postcss dist/*.css --use autoprefixer --replace",
    "watch": "npm-run-all --parallel watch:*",
      "watch:scss": "chokidar --verbose \"sass/**/*.scss\" -c \"npm run build\"",
    "lint": "stylelint \"sass/**/*.scss\"",
    "prerelease": "mkdirp release && npm run lint",
    "release": "npm-run-all release:*",
      "release:userstyle": "node-sass-chokidar --output-style compact sass/white-off.scss > release/white-off.user.css",
      "release:userjs": "echo Don't know how to do this yet.",
    "clean": "rimraf dist release"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "chokidar-cli": "^1.2.0",
    "mkdirp": "^0.5.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3"
  }
}
